{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/app/(auth)/*": ["./app/(auth)/*"] // 괄호 포함 경로 지원
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./types/**/*",
    "./src/**/*"
  ]
}
